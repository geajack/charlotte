{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "options": {
                "cwd": "${workspaceRoot}",
                "env": {
                    "FLASK_APP": "app.py",
                    "FLASK_DEBUG": "1"
                }
            },
            "label": "Serve",
            "type": "shell",
            "command": "source ../CharlotteEnv/bin/activate && flask run",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}