{% extends "base.jinja" %}

{% block page_head %}
    <link rel="stylesheet" href="{{url_for("theme", path="article.css")}}" />
{% endblock page_head %}

{% block body %}
    <article>
        <header>
            <h1>{{title}}</h1>
            {% if author %}
                <legend id="author">by {{author}}</legend>
            {% else %}
                <legend id="author">by <em>Anonymous</em></legend>
            {% endif %}
            <legend id="date">posted on {{date}}</legend>
        </header>

        <main class="{{format}}-format">
            {{content}}
        </main>
    </article>
{% endblock %}