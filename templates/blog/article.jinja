{% extends "blog/base.jinja" %}

{% block page_head %}
    <link rel="stylesheet" href="{{url_for('static', filename='blog/article.css')}}" />
{% endblock page_head %}

{% block body %}
    <article>
        <header>
            <h1>{{title}}</h1>
            <legend id="author">by {{author}}</legend>
            <legend id="date">posted on {{date}}</legend>
        </header>

        <main>
            {{content}} 
        </main>
    </article>

    <a href="/">Back to index</a>
{% endblock %}